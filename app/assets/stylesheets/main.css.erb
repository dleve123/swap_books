html { 
	background: url(<%= asset_data_uri 'bg.png' %>) no-repeat center center fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}

h1, h2, h3 {
	color: rgba(44, 62, 80,1.0) !important;
}

/*NAV STUFF*/
.navbar-lo {
	background-color: transparent !important;
	padding: 15px;
}

.logo {
	position: relative;
	top: 10px;
	left: 10px;
}

.container-login{
	background-color: transparent !important;
}

.navbar-default {
	background-color: transparent !important;
	border-width: 0px;
	-webkit-box-shadow: 0px 0px;
	box-shadow: 0px 0px;
}

.login-button {
	position: fixed;
	top: 28px;
	right: 40px;
	font-size: 150%;
}

.login-button a {
	color: rgba(44, 62, 80,1.0) !important;
}

.login-button a:hover {
	color: rgba(231, 76, 60,1.0) !important;
}

.navbar-collapse.collapse {
	display: block !important;
}

.navbar-nav>li, .navbar-nav {
	float: left !important;
}


.navbar-nav.navbar-right:last-child {
	margin-right: -15px !important;
}

.navbar-right {
	float: right!important;
}

/*LO FOOTER*/
.footer {
	background-color: rgba(44, 62, 80,1.0);
	position:fixed;
	bottom:0px;
	width: 100%;
	height:24px;
}

.footer p {
	color: white;
	padding:2px;
}

.footer a {
	color: rgba(231, 76, 60,1.0);
}

.notice {
	margin-left: auto;
    margin-right: auto;
    margin-top: 60px;
}

.alert {
	margin-left: auto;
    margin-right: auto;
    margin-top: 60px;
}

.custom-alert-warning {
  position: fixed;
  right: 25px;
  left: 25px;
  background-color:#e74c3c;
  border-color: ##e67e22;
}

/*CONTENT STUFF*/
.buffer {
	padding-top: 100px;
}

.register-button {
	margin-top: 15px;
}

/*PROD SEARCH AND RELATED*/
.empty-prod {
	margin-top: 30px;
	background-color: rgba(0, 0, 0, .2);
	width: 100%;
	height: 70px;
	border: 1px dashed rgba(0, 0, 0, .5);
	border-radius: 10px;
}

#book-search {
	/*position: relative;
	top: 17px;*/
}

.search-ico {
	top: 17px;
	right: 13px;
}

.filled-prod {
	margin-top: 30px;
	background-color: white;
	width: 100%;
	height: 70px;
	border: 1px solid rgba(44, 62, 80,1.0);
	border-radius: 10px;
}

.prod-search-close-btn {
	cursor: pointer;
	position: relative;
	top:2px;
}

.buy-sell-row {
	margin-top: 8px;
}

.count-row {
	margin-top: 3px;
}

/*MY BOOKS*/
.my-books-populated {
	background-color: white;
	border: 1px solid rgba(44, 62, 80,1.0);
	border-radius: 10px;
	min-height: 70px;
}

.my-books-title {
	margin-top: 20px;
}

.my-books-empty-shape {
	background-color: rgba(0, 0, 0, .2);
	width: 100%;
	height: 70px;
	border: 1px dashed rgba(0, 0, 0, .5);
	border-radius: 10px;
}

.my-books-empty-text {
	position: relative;
	top: 15px;
}

.my-books-entry {
	background-color:transparent;
	height: 70px;
}

.my-books-entry-image {
	position:relative;
	top: 10px;
}

.my-books-entry-name {
	position:relative;
	top: 16px;
}

.my-books-entry-notification .badge {
	min-width: 30px !important;
	min-height: 30px !important;
	border-radius: 15px !important;
	font-size: 20px !important;
	position: relative;
	top: 20px;
	cursor: pointer;
	/*background-color: #d9534f;*/
	border-color: #d43f3a;
	-webkit-animation: blink 1s infinite;
}

.my-books-entry-notification .badge:hover {
	background-color: rgb(171, 28, 30) !important;
}

@-webkit-keyframes blink {
	0%, 100% {background-color: #d9534f}
	50% {background-color: rgb(171, 28, 30)}
}

/*MATCH ROOM*/
.match-room-container {
	margin-top: 60px;
	padding: 20px;
	background-color:white;
	border: 1px solid rgba(44, 62, 80,1.0);
	border-radius: 10px;
}

.match-room-right {
	padding: 25px;
	padding-top: 0px;
}

.chat-window {
	background-color: rgba(230, 230, 230,1.0);
	min-height: 300px;
	border: 1px solid rgba(0,0,0, .4);
	border-radius: 10px;
	padding: 5px;
	overflow: auto;
}

.chat-them {
	color: rgba(231, 76, 60,1.0);
}

.chat-message {
	margin-top: 10px;
}

.chat-send-button {
	margin-top: 10px;
	position: relative;
	left:-3px;
}

.btn-lock-in {
	background-color: rgba(44, 62, 80,1.0);
	color: white;
}

.datepicker {
	z-index:1151111111111111111111111111 !important;
}

