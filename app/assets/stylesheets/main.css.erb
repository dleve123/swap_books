html { 
	background: url(<%= asset_data_uri 'bg.png' %>) no-repeat center center fixed; 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}

h1, h2, h3 {
	color: rgba(44, 62, 80,1.0) !important;
}

/*NAV STUFF*/
.navbar-lo {
	background-color: transparent !important;
	padding: 15px;
}

.logo {
	position: relative;
	top: 10px;
	left: 10px;
}

.navbar-default {
	background-color: transparent !important;
	border-width: 0px;
	-webkit-box-shadow: 0px 0px;
	box-shadow: 0px 0px;
}

.login-button {
	position: fixed;
	top: 28px;
	right: 40px;
	font-size: 150%;
}

.login-button a {
	color: rgba(44, 62, 80,1.0) !important;
}

.login-button a:hover {
	color: rgba(231, 76, 60,1.0) !important;
}

.navbar-collapse.collapse {
	display: block !important;
}

.navbar-nav>li, .navbar-nav {
	float: left !important;
}


.navbar-nav.navbar-right:last-child {
	margin-right: -15px !important;
}

.navbar-right {
	float: right!important;
}

/*LO FOOTER*/
.footer {
	background-color: rgba(44, 62, 80,1.0);
	position:fixed;
	bottom:0px;
	width: 100%;
	height:24px;
}

.footer p {
	color: white;
	padding:2px;
}

.footer a {
	color: rgba(231, 76, 60,1.0);
}



/*CONTENT STUFF*/
.buffer {
	padding-top: 100px;
}

.register-button {
	margin-top: 15px;
}

/*PROD SEARCH AND RELATED*/
.empty-prod {
	margin-top: 30px;
	background-color: rgba(0, 0, 0, .2);
	width: 100%;
	height: 70px;
	border: 1px dashed rgba(0, 0, 0, .5);
	border-radius: 10px;
}

#book-search {
	position: relative;
	top: 17px;
}

.search-ico {
	top: 17px;
	right: 13px;
}

/*MY BOOKS*/
.my-books-populated {
	background-color: white;
	border: 1px solid rgba(44, 62, 80,1.0);
	border-radius: 10px;
	min-height: 70px;
}

.my-books-title {
	margin-top: 20px;
}

.my-books-empty-shape {
	background-color: rgba(0, 0, 0, .2);
	width: 100%;
	height: 70px;
	border: 1px dashed rgba(0, 0, 0, .5);
	border-radius: 10px;
}

.my-books-empty-text {
	position: relative;
	top: 15px;
}

.my-books-entry {
	background-color:transparent;
	height: 70px;
}

.my-books-entry-image {
	position:relative;
	top: 10px;
}

.my-books-entry-name {
	position:relative;
	top: 16px;
}

.my-books-entry-notification .badge {
	min-width: 30px !important;
	min-height: 30px !important;
	border-radius: 15px !important;
	font-size: 20px !important;
	position: relative;
	top: 20px;
	cursor: pointer;
	/*background-color: #d9534f;*/
	border-color: #d43f3a;
	-webkit-animation: blink 1s infinite;
}

.my-books-entry-notification .badge:hover {
	background-color: rgb(171, 28, 30) !important;
}


@-webkit-keyframes blink {
	0%, 100% {background-color: #d9534f}
	50% {background-color: rgb(171, 28, 30)}
}