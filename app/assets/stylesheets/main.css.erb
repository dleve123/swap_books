html { 
	background: url(<%= asset_data_uri 'bg.png' %>) no-repeat center center fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}


h1, h2, h3 {
	color: rgba(44, 62, 80,1.0) !important;
}

/*NAV STUFF*/
.navbar-lo {
	background-color: transparent !important;
	padding: 15px;
}

.logo {
	position: relative;
	top: 10px;
	left: 10px;
}

.container-login{
	background-color: transparent !important;
}

.navbar-default {
	background-color: transparent !important;
	border-width: 0px;
	-webkit-box-shadow: 0px 0px;
	box-shadow: 0px 0px;
}

.login-button {
	position: fixed;
	top: 28px;
	right: 40px;
	font-size: 150%;
}

.login-button a {
	color: rgba(44, 62, 80,1.0) !important;
}

.login-button a:hover {
	color: rgba(231, 76, 60,1.0) !important;
}

.navbar-collapse.collapse {
display: block!important;
}

.navbar-nav>li, .navbar-nav {
float: left !important;
}


.navbar-nav.navbar-right:last-child {
margin-right: -15px !important;
}

.navbar-right {
float: right!important;
}

/*LO FOOTER*/
.lo-footer {
	background-color: rgba(44, 62, 80,1.0);
	position:fixed;
	bottom:0px;
	width: 100%;
	height:24px;
}

.lo-footer p {
	color: white;
	padding:2px;
}

.lo-footer a {
	color: rgba(231, 76, 60,1.0);
}

.notice {
	margin-left: auto;
    margin-right: auto;
    margin-top: 60px;
}

.alert {
	margin-left: auto;
    margin-right: auto;
    margin-top: 60px;
}

.custom-alert-warning {
  position: fixed;
  right: 25px;
  left: 25px;
  background-color:#e74c3c;
  border-color: #e67e22;
}

/*CONTENT STUFF*/
.buffer {
	padding-top: 100px;
}

.register-button {
	margin-top: 15px;
}

/*PROD SEARCH AND RELATED*/
.empty-prod {
	margin-top: 30px;
	background-color: rgba(0, 0, 0, .2);
	width: 100%;
	height: 70px;
	border: 1px dashed rgba(0, 0, 0, .5);
	border-radius: 10px;
}

#book-search {
	position: relative;
	top: 17px;
}
